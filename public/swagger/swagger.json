        "/api/auth/user": {
            "get": {
                "description": "Get User Information",
                "tags": [
                    "Authorization"
                ],
                "parameters": [{
                    "name": "Authorization",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "examples": {
                            "application/json": {
                                "id": 1,
                                "name": "tranvanmy",
                                "email": "tranvanmydev@gmail.com",
                                "email_verified_at": null,
                                "created_at": "2020-05-10 14:51:00",
                                "updated_at": "2020-05-10 14:51:00"
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/responses/Validate"
                    },
                    "401": {
                        "$ref": "#/responses/Unauthorized"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "description": "Log-out the logged user",
                "tags": [
                    "Authorization"
                ],
                "consumes": "application/json",
                "produces": "application/json",
                "parameters": [{
                    "name": "Authorization",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "examples": {
                            "application/json": {
                                "success": true
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/responses/Unauthorized"
                    }
                }
            }
        },
        "/api/reset-password": {
            "post": {
                "description": "Send an email contains reset password token to user",
                "tags": [
                    "Authorization"
                ],
                "consumes": "application/json",
                "parameters": [{
                    "name": "email",
                    "in": "query",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "examples": {
                            "application/json": {
                                "success": true
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/responses/Validate"
                    }
                }
            }
        },
        "/api/reset-password/{token}": {
            "put": {
                "description": "Change user's password by passed token",
                "tags": [
                    "Authorization"
                ],
                "consumes": "application/json",
                "parameters": [{
                        "name": "token",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password_confirmation",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "examples": {
                            "application/json": {
                                "success": true
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/responses/NotFound"
                    },
                    "422": {
                        "$ref": "#/responses/Validate"
                    }
                }
            }
        }
    },
    "responses": {
        "Validate": {
            "description": "The given data was invalid"
        },
        "Unauthorized": {
            "description": "Unauthenticated"
        },
        "NotFound": {
            "description": "Not Found"
        }
    }
